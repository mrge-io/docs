{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto",
    "overrides": [
        {
            "files": "*.mdx",
            "options": {
                "parser": "mdx",
                "printWidth": 80
            }
        }
    ]
}